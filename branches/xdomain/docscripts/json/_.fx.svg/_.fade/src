var anim = new dojo.animation.Animation(
	new dojo.math.curves.Line([startOpac],[endOpac]),
	duration,
	0
);
dojo.event.connect(anim, "onAnimate", function(e){
	dojo.svg.setOpacity(node, e.x);
});
if (callback) {
	dojo.event.connect(anim, "onEnd", function(e){
		callback(node, anim);
	});
};
anim.play(true);
return anim;