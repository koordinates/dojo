<?xml version="1.0" encoding="utf-8"?>
<dojo:application xmlns:dojo="http://www.dojotoolkit.org/2004/dojoml" xmlns:xlink="http://www.w3.org/1999/xlink">
	<dojo:grid cssFileName="grid.css" cssClassName="dojoGrid" id="dojoGridExample" dataProvider="gridExampleDataModel" propertyProvider="gridDefinitions" eventProvider="gridEvents" />
	<dojo:propertyModel id="gridDefinitions" componentClass="default">
		<!-- Examples of component and data models for a grid -->
		<sort type="user" />
		<head>
			<rows>
				<cssClassList>headRowClassName1</cssClassList>
				<rowHeight>1.5em</rowHeight><!-- should this really be height... what if we wanted to be able to specify rowHeight as an attribute of the dojo:grid element? -->
				<cells>
					<cssClassList>headCellClassName1</cssClassList>
				</cells>
			</rows>
		</head>
		<body>
			<rows>
				<cssClassList>bodyRowClassName1,bodyRowClassName2</cssClassList>
				<repetitionFrequency>1,1</repetitionFrequency>
				<rowHeight>1.2em</rowHeight>
				<cells>
					<cssClassList>bodyCellClassName1</cssClassList>
				</cells>
			</rows>
		</body>
		<foot>
			<rows>
				<cssClassList>footRowClassName1</cssClassList>
				<rowHeight>1.5em</rowHeight>
				<cells>
					<cssClassList>footCellClassName1</cssClassList>
				</cells>
			</rows>
		</foot>
	</dojo:propertyModel>
	<dojo:dataModel id="gridExampleDataModel" src="#staticExampleModel" type="xml"><!-- this example shows inclusion of only certain elements from a data structure -->
		<label elementName="name" />
		<gridRowItem elementName="structure">
			<gridCellItem elementName="subStructure" />
			<gridCellItem elementName="subStructure3" />
			<gridCellItem elementName="subStructure4" />
		</gridRowItem>
	</dojo:dataModel>

	<dojo:dataModel id="gridExampleDataModel2" src="#staticExampleModel" type="xml"><!-- this example shows combining a couple of fields -->
		<label elementName="name" />
		<gridRowItem elementName="structure">
			<gridCellItem elementName="subStructure" />
			<gridCellItem>
				<elementName>substructure2</elementName>
				<elementName>substructure3</elementName>
				<!-- TODO: do we want a way to define simple operations between combined items, as well as a way to parse data, show substrings, etc.? -->
			</gridCellItem>
			<gridCellItem elementName="subStructure4" />
		</gridRowItem>
	</dojo:dataModel>

	<dojo:dataModel id="gridExampleDataModel3" src="gridData.js#staticExampleModel" type="javascript"><!-- this example references a javascript version of the model -->
		<label elementName="name" />
		<gridRowItem elementName="structure">
			<gridCellItem elementName="subStructure" />
			<gridCellItem>
				<elementName>substructure2</elementName>
				<elementName>substructure3</elementName>
			</gridCellItem>
			<gridCellItem elementName="subStructure4" />
		</gridRowItem>
	</dojo:dataModel>

	<dojo:eventModel id="gridEvents">
		<event type="onclick" target="gridCellItem" action="evt.target.highlight()" />
	</dojo:eventModel>

	<arbitraryDataStructure id="staticExampleModel">
		<name>testGrid</name>
		<structure>
			<subStructure>
				item11
			</subStructure>
			<subStructure2>
				item12
			</subStructure2>
			<subStructure3>
				item13
			</subStructure3>
			<subStructure4>
				item14
			</subStructure4>
		</structure>
		<structure>
			<subStructure>
				item21
			</subStructure>
			<subStructure2>
				item22
			</subStructure2>
			<subStructure3>
				item23
			</subStructure3>
			<subStructure4>
				item24
			</subStructure4>
		</structure>
		<structure>
			<subStructure>
				item31
			</subStructure>
			<subStructure2>
				item32
			</subStructure2>
			<subStructure3>
				item33
			</subStructure3>
			<subStructure4>
				item34
			</subStructure4>
		</structure>
	</arbitraryDataStructure>
</dojo:application>
