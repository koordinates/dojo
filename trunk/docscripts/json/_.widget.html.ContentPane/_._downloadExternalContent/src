this.setContent("Loading...");
var self = this;
dojo.io.bind({
	url: url,
	useCache: useCache,
	preventCache: !useCache,
	mimetype: "text/html",
	handler: function(type, data, e) {
		if(type == "load") {
			self.onLoad.call(self, url, data);
		} else {
			self.setContent.call(self, "Error loading '" + url + "' (" + e.status + " " + e.statusText + ")");
		}
	}
});