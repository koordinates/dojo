var values = null, cookie = dojo.io.cookie.getCookie(name);
if(cookie) {
	values = {};
	var pairs = cookie.split("&");
	for(var i = 0; i < pairs.length; i++) {
		var pair = pairs[i].split("=");
		var value = pair[1];
		if( isNaN(value) ) { value = unescape(pair[1]); }
		values[ unescape(pair[0]) ] = value;
	}
}
return values;