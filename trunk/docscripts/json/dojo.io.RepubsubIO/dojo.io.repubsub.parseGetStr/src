var baseUrl = document.location.toString();
var params = baseUrl.split("?", 2);
if(params.length > 1){
	var paramStr = params[1];
	var pairs = paramStr.split("&");
	var opts = [];
	for(var x in pairs){
		var sp = pairs[x].split("=");
		 FIXME: is this eval dangerous?
		try{
			opts[sp[0]]=eval(sp[1]);
		}catch(e){
			opts[sp[0]]=sp[1];
		}
	}
	return opts;
}else{
	return [];
}