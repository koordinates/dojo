var w = 0;

if(window.innerWidth){
	w = window.innerWidth;
}

if(dojo.exists(document, "documentElement.clientWidth")){
	 IE6 Strict
	var w2 = document.documentElement.clientWidth;
	 this lets us account for scrollbars
	if(!w || w2 && w2 < w) {
		w = w2;
	}
	return w;
}

if(document.body){
	 IE
	return document.body.clientWidth;
}

return 0;