var src = this.munge('LCH', arguments);

var H_rad = src.H * (Math.PI / 180);

var L = src.L;

var a = src.C / Math.pow(Math.pow(Math.tan(H_rad), 2) + 1, 0.5);
if ((90 < src.H) && (src.H < 270)){ a= -a; }

var b = Math.pow(Math.pow(src.C, 2) - Math.pow(a, 2), 0.5);
if (src.H > 180){ b = -b; }

return [L, a, b];