if (!dojo.lang.is(str)) { return ""; }
if (arguments.length == 0) { str = this; }
var words = str.split(' ');
var retval = "";
var len = words.length;
for (var i=0; i<len; i++) {
	var word = words[i];
	word = word.charAt(0).toUpperCase() + word.substring(1, word.length);
	retval += word;
	if (i < len-1)
		retval += " ";
}

return new (retval);  