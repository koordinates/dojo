flags = {
	format: [
		"###-###-####",
		"(###) ###-####",
		"(###) ### ####",
		"###.###.####",
		"###/###-####",
		"### ### ####",
		"###-###-#### x#???",
		"(###) ###-#### x#???",
		"(###) ### #### x#???",
		"###.###.#### x#???",
		"###/###-#### x#???",
		"### ### #### x#???"
	]
};

return dojo.validate.isNumberFormat(value, flags);