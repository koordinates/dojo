<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_3.dtd">

<web-app>
  <display-name>Moxie</display-name>
  <description>A web-based word processor with persistent storage, offline ability, and server synchronization</description>
  
	<servlet>
		<description>
			The ability to view, create, and update Moxie pages
		</description>
		<display-name>
			MoxieServlet
		</display-name>
		<servlet-name>
			MoxieServlet
		</servlet-name>
		<servlet-class>
			org.dojo.moxie.MoxieServlet
		</servlet-class>
		<init-param>
            <param-name>jdbcURL</param-name>
            <param-value>jdbc:mysql://localhost/moxie</param-value>
        </init-param>
		<init-param>
            <param-name>driver</param-name>
            <param-value>com.mysql.jdbc.Driver</param-value>
        </init-param>
		<init-param>
            <param-name>userName</param-name>
            <param-value>moxie</param-value>
        </init-param>
		<init-param>
            <param-name>password</param-name>
            <param-value>changeme</param-value>
        </init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
		<description>
			Our syncing servlet for syncing the client and
			server for offline use.
		</description>
		<display-name>
			SyncServlet
		</display-name>
		<servlet-name>
			SyncServlet
		</servlet-name>
		<servlet-class>
			org.dojo.moxie.sync.SyncServlet
		</servlet-class>
		<!-- Make sure this loads after the MoxieServlet -->
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>MoxieServlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>SyncServlet</servlet-name>
		<url-pattern>/sync</url-pattern>
	</servlet-mapping>
</web-app>
